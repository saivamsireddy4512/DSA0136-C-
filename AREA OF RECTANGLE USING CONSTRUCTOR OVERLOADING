#include <iostream>
#include<math.h>
#define PI 3.141
using namespace std;
class AreaRectangle
{
  private:
    float area;
  public:
    AreaRectangle(float length, float breadth)
    {
        area = length * breadth;
    }
    void display()
    {
        cout << "Area:\t" << area << endl;
    }
};
int main()
{
    float length, breadth;
        cout << "Enter the length:\t";
    cin >> length;
    cout << "Enter the breadth:\t";
    cin >> breadth;
    AreaRectangle area(length, breadth);
    area.display();
    return 0;
}

